<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
       
       <!--spring beans cfg-->
       <bean id="ltime" class="java.time.LocalTime" factory-method="now"/>
        	<!--Dependent spring bean cfg-->
        <bean id="wmg" class="com.sathya.sbeans.WishMessageGenerator"><!--target spring bean cfg-->
        <property name="time" ref="ltime"/><!--setter injection cfg-->
     
        </bean>
         </beans>